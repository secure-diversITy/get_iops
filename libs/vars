### general functions

F_GETMEM(){
    # detect RAM and verify if valid
    MEMMB=$(grep -i MemTotal /proc/meminfo | grep -Eo '[[:digit:]]+')
    if [ "$MEMMB" -lt 1 ];then
        echo "ERROR: CANNOT READ RAM INFO!" 
        MEMMB=unknown
    else
        MEMMB=$((MEMMB / 1024))
    fi
    echo $MEMMB
}
